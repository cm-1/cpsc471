extends layout
block content
	h1 Edit Account
	form(method='POST', action='/users/editaccount')
		#form-group
			label Email:
			input.form-control(name='email', type='text' value = email)
		#form-group
			label Password: 
			input.form-control(name='password', type='password')
		#form-group
			label Confirm Password: 
			input.form-control(name='password2', type='password')
		br
		input.btn.btn-primary(type='submit', value='Submit')